<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_pager_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_new"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/image_news"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </ScrollView>
        <ScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/long_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/a" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gif1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gif_one" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/b" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gif2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gif_two" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/c" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/seven" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/d" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/fd">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:layout_marginTop="60dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.socket.viewpagerdemo.PointView
                                android:id="@+id/point"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                            <RelativeLayout
                                android:id="@+id/red"
                                android:layout_width="100dp"
                                android:layout_height="25dp"
                                android:background="@drawable/red">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="7dp"
                                    android:gravity="center"
                                    android:text="发动机端ECU X2"
                                    android:textColor="#fff"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="130dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.socket.viewpagerdemo.PointView
                                android:id="@+id/point1"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                            <RelativeLayout
                                android:id="@+id/gray"
                                android:layout_width="100dp"
                                android:layout_height="25dp"
                                android:background="@drawable/gray">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="7dp"
                                    android:gravity="center"
                                    android:text="冷却液温度传感器"
                                    android:textColor="#fff"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/image_e"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/e"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/image_f"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/f" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>


</LinearLayout>
